@using WeblogAspNet.Data
@model Category

@{
    Layout = "_LayoutAdmin";
    var isEditing = Model.CategoryId != 0;
    ViewData["Title"] = isEditing ? "แก้ไขหมวดหมู่" : "สร้างหมวดหมู่ใหม่";
    ViewData["CardTitle"] = isEditing ? "แก้ไขหมวดหมู่" : "สร้างหมวดหมู่ใหม่";
}

<form asp-action="CategoryForm" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CategoryId" />
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-dark btn-sm">
            @if (isEditing)
            {
                <text>บันทึกการเปลี่ยนแปลง</text>
            }
            else
            {
                <text>สร้างหมวดหมู่</text>
            }
        </button>
    </div>
</form>